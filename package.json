{
	"name": "ngx-scroll-event",
	"version": "1.0.6",
	"description": "An Angular 2+ directive to handle scroll events on an element.",
	"scripts": {
		"build": "ngc -p tsconfig.json",
		"lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
		"test": "tsc && karma start",
		"prepublish": "npm run clean && npm run build",
		"postpublish": "npm run clean",
		"clean:root": "rimraf  ./*js ./*.js.map ./*.d.ts ./*.metadata.json",
		"clean:src": "rimraf ./src/*js ./src/*.js.map ./src/*.d.ts ./src/*.metadata.json",
		"clean:compiled": "rimraf ./compiled",
		"clean": "npm run clean:root && npm run clean:src && npm run clean:compiled",
		"tsc": "tsc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/anasAsh/ng2-scroll-event"
	},
	"files": [
		"src",
		"compiled"
	],
	"author": "anasAsh",
	"keywords": [
		"scroll",
		"directive",
		"event",
		"angular 2",
		"angular2",
		"Angular",
		"typescript"
	],
	"license": "MIT",
	"main": "./index.js",
	"dependencies": {},
	"peerDependencies": {
		"@angular/common": ">=4.3.0 || >5.0.0",
		"@angular/core": ">=4.3.0 || >5.0.0"
	},
	"devDependencies": {
		"@angular/common": "^5.2.0",
		"@angular/compiler": "^5.2.0",
		"@angular/compiler-cli": "^5.2.0",
		"@angular/core": "^5.2.0",
		"@angular/platform-browser": "^5.2.0",
		"@types/es6-shim": "^0.31.32",
		"@types/jasmine": "~2.8.3",
		"@types/jasminewd2": "~2.0.2",
		"@types/node": "~6.0.60",
		"codelyzer": "^4.0.1",
		"jasmine-core": "~2.8.0",
		"jasmine-spec-reporter": "~4.2.1",
		"karma": "~2.0.0",
		"karma-chrome-launcher": "~2.2.0",
		"karma-coverage-istanbul-reporter": "^1.2.1",
		"karma-jasmine": "~1.1.0",
		"karma-jasmine-html-reporter": "^0.2.2",
		"rimraf": "^2.6.1",
		"rxjs": "^5.0.1",
		"tslint": "~5.9.1",
		"typescript": "~2.5.3",
		"zone.js": "^0.8.19"
	},
	"engines": {
		"node": ">=0.8.0"
	}
}
